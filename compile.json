{
	"applications": [
		{
			"class": "apiviewer.Application",
			"theme": "apiviewer.Theme",
			"name": "apiviewer",
			"title": "Qooxdoo API Viewer"
		}
	],
    "include": [
        "qx.*"
    ],
    "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement"
    ],
	/** Targets */
	"targets": [
		{
			"type": "source",
			"outputPath": "source-output"
		}
	],
	
	"defaultTarget": "source",
	
	"locales": [
		"en"
	],
	"serve": {
	   "listenPort": 8080
	}
}