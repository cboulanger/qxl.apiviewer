{
   "environment": {
    "qx.icontheme": "Tango"
   },
	"applications": [
		{
			"class": "qxl.apiviewer.Application",
			"theme": "qxl.apiviewer.Theme",
			"name": "apiviewer",
			"title": "Qooxdoo API Viewer"
		}
	],
    "include": [
        "qx.*",
		"q",
		"qxWeb"
	],
	"exclude": [
		"qx.test.MemoryManagement",
		"qx.module.Blocker",
		"qx.module.Placement"
 ],
 /** Targets */
	"targets": [
		{
			"type": "source",
			"outputPath": "source-output"
		}
		,{
			"type": "build",
			"outputPath": "build-output"
		}
	],
	
	"defaultTarget": "source",
	
	"locales": [
		"en"
	],
	"serve": {
	   "listenPort": 8080
	}
}